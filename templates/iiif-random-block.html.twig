{#
/**
 * @file
 * Default theme implementation for the IIIF Random Block (Carousel version).
 *
 * Available variables:
 * - items: An array of items to display. Each item contains:
 * - image_url: URL of the IIIF image.
 * - manifest_url: URL of the IIIF manifest.
 * - related_url: URL to the original item page.
 * - label: The label of the manifest.
 * - source_link: The URL of the data source.
 * - source_link_text: The text for the source link.
 *
 * @see iiif_random_block.module
 */
#}
<style>
  .iiif-carousel-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: 1rem;
  }
  .iiif-carousel-item {
    display: none; /* Initially hide all items */
    text-align: center;
    padding: 0.5rem;
    font-size: 0.9em;
    /* no animation here; apply on .active to ensure first render animates */
  }

  /* Media wrapper reserves height (aspect-ratio) and provides positioning */
  .iiif-mediawrap {
    position: relative;
    display: block;
    width: 100%;
    aspect-ratio: var(--iiif-aspect-ratio, 1 / 1);
    border-radius: 8px;
    overflow: hidden;
    margin: 0 auto 0.5rem;
  }

  /* Info button (â“˜) */
  .iiif-info-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    width: 32px;
    height: 32px;
    display: none; /* shown on hover */
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: #ffffff;
    color: #000000; /* set icon (currentColor) to black */
    box-shadow: 0 1px 3px rgba(0,0,0,.2);
    cursor: pointer;
    z-index: 2;
  }
  /* Show on hover of mediawrap or entire item; also when any child gets focus (keyboard) */
  .iiif-mediawrap:hover .iiif-info-btn,
  .iiif-carousel-item:hover .iiif-info-btn,
  .iiif-mediawrap:focus-within .iiif-info-btn { display: flex; }
  /* On touch devices (no hover), show the button by default */
  @media (hover: none) and (pointer: coarse) {
    .iiif-info-btn { display: flex; }
  }
  .iiif-info-btn svg { width: 22px; height: 22px; display: block; }

  /* Info panel */
  .iiif-info-panel {
    position: absolute; /* positioned inside .iiif-mediawrap */
    left: 0;
    right: 0;
    top: 0;
    margin: 0 auto;
    width: 100%;
    min-height: 50%; /* half of the media (image) height */
  max-height: 100%;
  /* Prevent the panel from growing beyond viewport height inside media area */
  max-height: min(100%, calc(100vh - 24px));
    background: #fff;
    color: #333;
    border-radius: 8px;
    border: 1px solid rgba(0,0,0,.12);
    box-shadow:
      0 12px 28px rgba(0,0,0,.22),
      0 2px 8px rgba(0,0,0,.12);
    overflow: hidden; /* gradients and close button stay fixed */
    padding: 0; /* padding moves to inner scroll container */
    display: flex;
    flex-direction: column;
    display: none;
    z-index: 3;
    text-align: left; /* override parent center alignment */
    width: auto;
    /* Make the scrollbar more visible */
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: rgba(0,0,0,.4) rgba(0,0,0,.08); /* thumb track */
  }

  /* WebKit scrollbar styling */
  .iiif-info-panel::-webkit-scrollbar { width: 10px; }
  .iiif-info-panel::-webkit-scrollbar-thumb {
    background-color: rgba(0,0,0,.4);
    border-radius: 8px;
    border: 2px solid transparent;
    background-clip: padding-box;
  }
  .iiif-info-panel::-webkit-scrollbar-track {
    background-color: rgba(0,0,0,.08);
    border-radius: 8px;
  }

  /* Scroll hint: top/bottom gradient overlays (shown when scrollable) */
  .iiif-info-panel::before,
  .iiif-info-panel::after {
    content: "";
    position: absolute;
    left: 0; right: 0;
    height: 32px;
    pointer-events: none;
    opacity: 0;
    transition: opacity .2s ease;
  }
  .iiif-info-panel::before {
    top: 0;
    background: linear-gradient(to bottom, rgba(255,255,255,.95), rgba(255,255,255,0));
  }
  .iiif-info-panel::after {
    bottom: 0;
    background: linear-gradient(to top, rgba(255,255,255,.95), rgba(255,255,255,0));
  }
  /* Toggle visibility via classes computed in JS (applied to panel) */
  .iiif-info-panel.can-scroll.not-at-top::before { opacity: 1; }
  .iiif-info-panel.can-scroll.not-at-bottom::after { opacity: 1; }

  /* Scroll hint arrows */
  .iiif-scroll-hint {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 28px; height: 28px;
    border-radius: 50%;
    background: rgba(0,0,0,.06);
    display: none;
    align-items: center; justify-content: center;
    pointer-events: none; /* hint only, not interactive */
    z-index: 2;
  }
  .iiif-scroll-hint svg { width: 16px; height: 16px; stroke: #555; stroke-width: 2; fill: none; }
  .iiif-scroll-hint.up { top: 6px; }
  .iiif-scroll-hint.down { bottom: 6px; }
  @keyframes hint-bounce {
    0%, 100% { transform: translate(-50%, 0); }
    50% { transform: translate(-50%, -2px); }
  }
  @keyframes hint-bounce-down {
    0%, 100% { transform: translate(-50%, 0); }
    50% { transform: translate(-50%, 2px); }
  }
  .iiif-scroll-hint.up { animation: hint-bounce 1.6s ease-in-out infinite; }
  .iiif-scroll-hint.down { animation: hint-bounce-down 1.6s ease-in-out infinite; }
  /* Show arrows only when scrolling is possible and direction exists */
  .iiif-info-panel.can-scroll.not-at-top .iiif-scroll-hint.up { display: flex; }
  .iiif-info-panel.can-scroll.not-at-bottom .iiif-scroll-hint.down { display: flex; }

  .iiif-info-panel.open { display: flex; }
  .iiif-info-panel .iiif-info-close {
    position: absolute;
    top: 6px;
    right: 8px;
    width: 28px; height: 28px;
    display: inline-flex; align-items: center; justify-content: center;
    border-radius: 50%; background: #f5f5f5; cursor: pointer;
    box-shadow: 0 1px 2px rgba(0,0,0,.1);
    margin: 0;
    z-index: 2;
  }
  .iiif-info-panel .iiif-info-close svg { width: 16px; height: 16px; stroke: #333; stroke-width: 2; fill: none; }

  /* Inner scroll container so panel chrome (gradients/close) stays fixed */
  .iiif-info-panel .iiif-info-scroll {
    overflow: auto;
    padding: 12px 16px 16px;
    /* Avoid overlapping with the close button on the right */
    padding-right: 48px;
    /* Use flexbox to ensure the scroll area can shrink and scroll */
    flex: 1 1 auto;
    min-height: 0; /* critical for scrollable flex children */
  }

  /* Reset margins for paragraphs inside info text */
  .iiif-info-panel .iiif-info-scroll p { margin: 0; }
  .iiif-carousel-item.active {
    display: block; /* Show only the active item */
    animation: iiif-fade 1.0s ease; /* fade on activation (including first) */
  }
  .iiif-carousel-item img {
    width: 100%;
    height: 100%;
    display: block;
  object-fit: cover;
    /* fade-in only the image; wrapper shows skeleton */
    opacity: 0;
    transition: opacity .4s ease;
  }
  .iiif-carousel-item img.is-loaded { opacity: 1; }

  /* Image wrapper: reserves height via aspect-ratio and shows skeleton */
  .iiif-imgwrap {
    display: block;
    width: 100%;
    height: 100%; /* fill mediawrap height */
    /* Skeleton shimmer */
    background: linear-gradient(90deg, #e9e9e9 25%, #f5f5f5 37%, #e9e9e9 63%);
    background-size: 400% 100%;
    animation: iiif-skeleton 1.2s ease-in-out infinite;
    /* border radius and overflow are on mediawrap */
    margin: 0;
  }

  /* Stop skeleton once the image has loaded (modern browsers supporting :has) */
  .iiif-imgwrap:has(img.is-loaded) {
    animation: none;
    background: none;
  }

  @keyframes iiif-skeleton {
    0% { background-position: 100% 0; }
    100% { background-position: 0 0; }
  }

  @media (prefers-reduced-motion: reduce) {
    .iiif-imgwrap { animation: none; }
  }
  .iiif-carousel-item .item-link {
    margin-top: 0.5rem;
    word-wrap: break-word;
  }
  .iiif-carousel-item .item-link a {
    color: #333;
    text-decoration: none;
  }
  .iiif-carousel-item .item-link a:hover {
    text-decoration: underline;
  }
  .iiif-carousel-footer {
    font-size: 0.8em;
    color: #666;
    text-align: right;
    width: auto;
    padding-right: 10px;
  }
  @keyframes iiif-fade {
    from { opacity: .4 }
    to { opacity: 1 }
  }
  {% if wrapper_id %}
  /* Responsive aspect ratio by breakpoints */
  #{{ wrapper_id }} { --iiif-aspect-ratio: {{ aspect_ratio }}; }
  @media (max-width: {{ breakpoint_md_max }}px) {
    #{{ wrapper_id }} { --iiif-aspect-ratio: {{ aspect_ratio_md }}; }
  }
  @media (max-width: {{ breakpoint_sm_max }}px) {
    #{{ wrapper_id }} { --iiif-aspect-ratio: {{ aspect_ratio_sm }}; }
  }
  {% endif %}
</style>

<div id="{{ wrapper_id }}" class="iiif-carousel">
  {% if items %}
    <div class="iiif-carousel-container">
      {% for item in items %}
        <div class="iiif-carousel-item">
          <div class="iiif-mediawrap">
            {% if info_button_enabled %}
            <div class="iiif-info-btn" role="button" aria-label="Information">
              <!-- Provided SVG info icon (color via currentColor) -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 160 160" aria-hidden="true">
                <g fill="currentColor">
                  <path d="m80 15c-35.88 0-65 29.12-65 65s29.12 65 65 65 65-29.12 65-65-29.12-65-65-65zm0 10c30.36 0 55 24.64 55 55s-24.64 55-55 55-55-24.64-55-55 24.64-55 55-55z"/>
                  <path d="m57.373 18.231a9.3834 9.1153 0 1 1 -18.767 0 9.3834 9.1153 0 1 1 18.767 0z" transform="matrix(1.1989 0 0 1.2342 21.214 28.75)"/>
                  <path d="m90.665 110.96c-0.069 2.73 1.211 3.5 4.327 3.82l5.008 0.1v5.12h-39.073v-5.12l5.503-0.1c3.291-0.1 4.082-1.38 4.327-3.82v-30.813c0.035-4.879-6.296-4.113-10.757-3.968v-5.074l30.665-1.105"/>
                </g>
              </svg>
            </div>
            {% endif %}

            {# The image itself remains a link to the item page #}
            <a class="iiif-imgwrap" href="{{ item.related_url }}" target="_blank" rel="noopener noreferrer" title="{{ item.label }}">
              <img src="{{ item.image_url }}" alt="{{ item.label }}" loading="lazy">
            </a>

            {% if info_button_enabled %}
              <div class="iiif-info-panel" role="dialog" aria-modal="false">
                <div class="iiif-scroll-hint up" aria-hidden="true">
                  <svg viewBox="0 0 24 24" focusable="false" aria-hidden="true">
                    <polyline points="6 14 12 8 18 14"></polyline>
                  </svg>
                </div>
                <div class="iiif-info-close" role="button" aria-label="Close">
                  <!-- SVG close icon (X) -->
                  <svg viewBox="0 0 24 24" aria-hidden="true">
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                  </svg>
                </div>
                <div class="iiif-info-scroll">
                  {{ info_text }}
                </div>
                <div class="iiif-scroll-hint down" aria-hidden="true">
                  <svg viewBox="0 0 24 24" focusable="false" aria-hidden="true">
                    <polyline points="6 10 12 16 18 10"></polyline>
                  </svg>
                </div>
              </div>
            {% endif %}
          </div>

          {# The text link below is now the item's label, linking to the item page #}
          <div class="item-link">
            <a href="{{ item.related_url }}" target="_blank" rel="noopener noreferrer">
              {{ item.label }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>{{ 'No images to display. Please run cron to generate data.'|t }}</p>
  {% endif %}

  {% if source_link_text and source_link %}
  <div class="iiif-carousel-footer">
    {{ 'Source:'|t }} <a href="{{ source_link }}" target="_blank" rel="noopener noreferrer">{{ source_link_text }}</a>
  </div>
  {% endif %}
</div>
